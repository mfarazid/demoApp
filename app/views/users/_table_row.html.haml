%tr
  %td= user.first_name
  %td= user.last_name
  %td= user.email
  %td= user.birth_date.strftime("%m/%d/%Y")
  %td 
    = link_to 'Show', user, :class => 'btn btn-default btn-xs', :remote => true, :title => "View User" 
    = link_to 'Edit', edit_user_path(user), :remote => true, :class => 'btn btn-default btn-xs', :title => "Edit User" 
    = link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-default btn-xs', :title => "Remove User" 
